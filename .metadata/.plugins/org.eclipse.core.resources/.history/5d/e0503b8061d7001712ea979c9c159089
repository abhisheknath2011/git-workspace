package com.abhishek.code;

import java.util.Arrays;

/**
 * @author Abhishek Nath
 *
 */
public class TwoSumClosest {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

	}
	
	public int closestSum(int [] a, int sum) {
		Arrays.sort(a);
		int i = 0;
		int j = a.length - 1;
		while(i < j) {
			int res = a[i] + a[j];
			if(sum - res > 0) {
				i++;
			}else {
				j--;
			}
		}
	}

}
