	public int findMinCost(String source, String target, int i, int j) {
		if(i == 0) {
			return j - i;
		}
		if(j == 0) {
			return i - j;
		}
		if(source.charAt(i) == target.charAt(j)) {
			return finMinCost(source, target, i-1, j-1) + 0;
		}
		return finMinCost(source, target, i, j-1), 
				finMinCost(source, target, i-1, j)
	}
	
	private static void int findMin() {
		int 
	}

}
